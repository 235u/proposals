@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<form id="profile-form" method="post">
    <div class="row">
        <div class="col form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" disabled />
        </div>
        <div class="col form-group">
            <label asp-for="Input.FaxNumber"></label>
            <input asp-for="Input.FaxNumber" class="form-control" />
            <span asp-validation-for="Input.FaxNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col form-group">
            <label asp-for="Input.FirstName"></label>
            <input asp-for="Input.FirstName" class="form-control" />
            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
        </div>
        <div class="col form-group">
            <label asp-for="Input.Extension"></label>
            <input asp-for="Input.Extension" class="form-control" />
            <span asp-validation-for="Input.Extension" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col form-group">
            <label asp-for="Input.MiddleName"></label>
            <input asp-for="Input.MiddleName" class="form-control" />
            <span asp-validation-for="Input.MiddleName" class="text-danger"></span>
        </div>
        <div class="col form-group">
            <label asp-for="Input.City"></label>
            <input asp-for="Input.City" class="form-control" />
            <span asp-validation-for="Input.City" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col form-group">
            <label asp-for="Input.LastName"></label>
            <input asp-for="Input.LastName" class="form-control" />
            <span asp-validation-for="Input.LastName" class="text-danger"></span>
        </div>
        <div class="col form-group">
            <label asp-for="Input.Country"></label>
            <input asp-for="Input.Country" class="form-control" />
            <span asp-validation-for="Input.Country" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col form-group">
            <label asp-for="Input.Gender"></label>
            <select asp-for="Input.Gender" asp-items="IndexModel.Genera" class="form-control"></select>
        </div>
        <div class="col form-group">
            <label asp-for="Input.Category"></label>
            <select asp-for="Input.Category" asp-items="IndexModel.Categories" class="form-control" disabled></select>
        </div>
    </div>
    <div class="row">
        <div class="col form-group">
            <label asp-for="Input.Title"></label>
            <input asp-for="Input.Title" class="form-control" />
            <span asp-validation-for="Input.Title" class="text-danger"></span>
        </div>
        <div class="col form-group">
            <label asp-for="Input.Organization"></label>
            <input asp-for="Input.Organization" class="form-control" disabled />
        </div>
    </div>
    <div class="row">
        <div class="col form-group">
            <label asp-for="Input.PhoneNumber"></label>
            <input asp-for="Input.PhoneNumber" class="form-control" />
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="col form-group">
            <label asp-for="Input.BelongsTo"></label>
            <input asp-for="Input.BelongsTo" class="form-control" disabled />
        </div>
    </div>
    <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
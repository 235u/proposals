@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <h4>Create a new account.</h4>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" tabindex="1" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="col form-group">
            <label asp-for="Input.PhoneNumber"></label>
            <input asp-for="Input.PhoneNumber" class="form-control" tabindex="9" />
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col form-group">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="form-control" tabindex="2" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="col form-group">
            <label asp-for="Input.FaxNumber"></label>
            <input asp-for="Input.FaxNumber" class="form-control" tabindex="10" />
            <span asp-validation-for="Input.FaxNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col form-group">
            <label asp-for="Input.ConfirmPassword"></label>
            <input asp-for="Input.ConfirmPassword" class="form-control" tabindex="3" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="col form-group">
            <label asp-for="Input.Extension"></label>
            <input asp-for="Input.Extension" class="form-control" tabindex="11" />
            <span asp-validation-for="Input.Extension" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col form-group">
            <label asp-for="Input.FirstName"></label>
            <input asp-for="Input.FirstName" class="form-control" tabindex="4" />
            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
        </div>
        <div class="col form-group">
            <label asp-for="Input.City"></label>
            <input asp-for="Input.City" class="form-control" tabindex="12" />
            <span asp-validation-for="Input.City" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col form-group">
            <label asp-for="Input.MiddleName"></label>
            <input asp-for="Input.MiddleName" class="form-control" tabindex="5" />
            <span asp-validation-for="Input.MiddleName" class="text-danger"></span>
        </div>
        <div class="col form-group">
            <label asp-for="Input.Country"></label>
            <input asp-for="Input.Country" class="form-control" tabindex="13" />
            <span asp-validation-for="Input.Country" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col form-group">
            <label asp-for="Input.LastName"></label>
            <input asp-for="Input.LastName" class="form-control" tabindex="6" />
            <span asp-validation-for="Input.LastName" class="text-danger"></span>
        </div>
        <div class="col form-group">
            <label asp-for="Input.Category"></label>
            <select asp-for="Input.Category" asp-items="RegisterModel.Categories" class="form-control" tabindex="14"></select>
        </div>
    </div>
    <div class="row">
        <div class="col form-group">
            <label asp-for="Input.Gender"></label>
            <select asp-for="Input.Gender" asp-items="RegisterModel.Genera" class="form-control" tabindex="7"></select>
        </div>
        <div class="col form-group">
            <label asp-for="Input.Organization"></label>
            <input asp-for="Input.Organization" class="form-control" tabindex="15" />
            <span asp-validation-for="Input.Organization" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col form-group">
            <label asp-for="Input.Title"></label>
            <input asp-for="Input.Title" class="form-control" tabindex="8" />
            <span asp-validation-for="Input.Title" class="text-danger"></span>
        </div>
        <div class="col form-group">
            <label asp-for="Input.BelongsTo"></label>
            <input asp-for="Input.BelongsTo" class="form-control" tabindex="16" />
            <span asp-validation-for="Input.BelongsTo" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary" tabindex="17">Register</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
